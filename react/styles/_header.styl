#mission_statement
  text-align: center
  font-family: 'Cinzel'
  color: $topbar-active-bg
  margin: 5px auto

#masthead
  padding: 0
  margin: 0
  /*
  div#ISKCONNews
    background: url(../img/ISKCONNews.png) no-repeat 0 0
  */
  .masthead
    height: 82px
    line-height: 82px
    h1
      display: none

    form#search-form
      margin-left: 45px
      #id_q
        margin-top: 15px
        margin-bottom: 15px
        padding-left 10px
        width: 100%
        border: 1px solid #4a6c95
        color: white
        background: #4a6c95
        border-radius: 0.3em 0.3em 0.3em 0.3em
        text-shadow: 0 2px 3px rgba(0, 0, 0, 0.1)
        transition: all 0.7s ease 0s
        line-height: 45px
        color: #fff

      button.search-submit
        height: 0
        width: 0
        border: 0
        background-color #fff

        &:before
          position: absolute
          height: 25px
          width: 25px
          font-size: 24px
          /* background: url(../img/search-white.png) no-repeat 0 0 #4a6c95; */
          font-family: 'FontAwesome'
          font-style: normal
          font-weight: normal
          content: '\f002'
          top: 2px
          right: 25px
          color: darkgrey
